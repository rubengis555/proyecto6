<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/fondoazul4"
    tools:context=".registro.registroUsuario">

    <ImageView
        android:id="@+id/imagenRegistro"
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:src="@drawable/registro" />

    <TextView
        android:id="@+id/textviewRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagenRegistro"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/alegreya_sans_sc_black_italic"
        android:gravity="center"
        android:text="@string/txt_Registro"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/txtusuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewRegistrarse"
        android:layout_marginTop="15dp"
        android:hint="usuario"
        android:textSize="15dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtusuario"
        android:layout_marginTop="20dp"
        android:hint="password"
        android:textSize="15dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/txtrepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtpassword"
        android:layout_marginTop="20dp"
        android:hint="Reintroduzca el password"
        android:textSize="15dp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtrepassword"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_registro"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_logar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_registro"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="@string/btn_logar"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewolvidocontra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_logar"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/design_default_color_error"
        android:textStyle="italic" />
</RelativeLayout>